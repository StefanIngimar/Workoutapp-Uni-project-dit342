			"event": [
				{
					"listen": "prerequest",
					"script": {
						"exec": [
							"pm.globals.set(\"expectedResult\", ({\r",
							"    \"user\": \"66e3107d334983ff003dc045\",\r",
							"    \"weight\": 800\r",
							"}));"
						],
						"type": "text/javascript",
						"packages": {}
					}
				},
				{
					"listen": "test",
					"script": {
						"exec": [
							"pm.test(\"Success\", function() {\r",
							"    pm.response.to.have.status(200);\r",
							"});\r",
							"\r",
							"var jsonData = pm.response.json();\r",
							"pm.globals.set(\"userId\", jsonData._id);\r",
							"const response = pm.response.json();\r",
							"delete response._id;\r",
							"delete response.__v;\r",
							"\r",
							"pm.test(\"Response structure is valid(besides _id and __v)\", () =>{\r",
							"    pm.expect(response).to.eql(pm.globals.get(\"expectedResult\"));\r",
							"})\r",
							"var requestBody = request.data;\r",
							"requestBody = JSON.parse(requestBody);\r",
							"pm.test(\"Response body is valid\", () =>{\r",
							"    pm.expect(response).to.eql(requestBody);\r",
							"})"
						],
						"type": "text/javascript",
						"packages": {}
					}
				}
			],
