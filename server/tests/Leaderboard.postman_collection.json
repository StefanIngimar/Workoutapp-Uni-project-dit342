		{
			"name": "DELETE BOARD",
			"event": [
				{
					"listen": "test",
					"script": {
						"exec": [
							"pm.test(\"Status code is 200 or 404\", function () {\r",
							"    pm.expect(pm.response.code).to.be.oneOf([200, 404]);\r",
							"});\r",
							"\r",
							"var jsonData = pm.response.json();\r",
							"console.log(\"Response body:\", jsonData);\r",
							"\r",
							"if (pm.response.status === 200) {\r",
							"    pm.test(\"Success\", function () {\r",
							"        pm.expect(jsonData.message).to.eql(\"Leaderboard entry successfully deleted\");\r",
							"    });\r",
							"\r",
							"if (pm.response.status === 404) {\r",
							"    pm.test(\"User entry not found\", function () {\r",
							"        pm.expect(jsonData.message).to.eql(\"Leaderboard entry not found\");\r",
							"    });\r",
							"}}"
						],
